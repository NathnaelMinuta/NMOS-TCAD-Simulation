      { Name = "source"      Voltage = 0.0 Resist = 20}
      { Name = "drain"      Voltage = 0.0 Resist = 20}
      { Name = "gate"      Voltage = 0.0 Workfunction = 4.2}
      { Name = "bulk"      Voltage = 0.0}
}
